---
import Four from "../icons/four.tsx"
import One from "../icons/one.tsx"
import ServiceIconOne from "../icons/service1-icon.tsx"
import ServiceIconTwo from "../icons/service2-icon.tsx"
import ServiceIconThree from "../icons/service3-icon.tsx"
import ServiceIconFour from "../icons/service4-icon.tsx"
import Three from "../icons/three.tsx"
import Two from "../icons/two.tsx"
import MainLayout from '../layouts/main-layout.astro'


const services = [
	{
		title: 'Planificación de Proyectos',
		text: 'Herramientas integradas para gestionar y presentar tus proyectos de diseño de manera profesional.'
	},
	{
		title: 'Trabajo de Interiores',
		text: 'Secciones dedicadas para mostrar tus servicios de diseño y remodelación interior.'
	},
	{
		title: 'Realización',
		text: 'Galerías y portfolios para exhibir el proceso y resultado de tus trabajos.'
	},
	{
		title: 'Trabajo 2D/3D',
		text: 'Incluye espacios para renderizados y planos técnicos que impresionan a los clientes.'
	},
	{
		title: 'Diseño Retail',
		text: 'Perfecto para diseñadores de espacios comerciales y tiendas.'
	},
	{
		title: 'Trabajo de Decoración',
		text: 'Destaca tus habilidades en decoración y estilismo con esta plantilla especializada.'
	},
]

const howWeWorkDetails = [
  {
    imgIcon: ServiceIconOne,
    numIcon: One,
    img: '/service1.png',
    title: 'Concepto y Detalles',
    info:'La plantilla incluye secciones para explicar tu proceso creativo y detalles técnicos de tus diseños.'

  },
  {
    imgIcon: ServiceIconTwo,
    numIcon: Two,
    img: '/service2.png',
    title: 'Idea para el Trabajo',
    info:'Inspira a tus clientes con ejemplos de ideas innovadoras incluidas en la galería de la plantilla.'

  },
  {
    imgIcon: ServiceIconThree,
    numIcon: Three,
    img: '/service3.png',
    title: 'Diseño',
    info:'Personalizamos cada proyecto para reflejar la visión única de nuestros clientes.'

  },
  {
    imgIcon: ServiceIconFour,
    numIcon: Four,
    img: '/service4.png',
    title: 'Perfección',
    info:'Optimizada para ofrecer una experiencia perfecta en todos los dispositivos y navegadores.'

  },
]
---


<MainLayout title = 'Plantilla de Diseño de Interiores - Servicios'>

  <!-- Banner Section -->

  <section class="w-full bg-services h-[50vh] flex justify-center items-end">
    <div class="py-[30px] lg:py-[41px] px-[60px] lg:px-[152px] flex flex-col justify-center items-center bg-white rounded-tl-[37px] rounded-tr-[37px] gap-2.5">
      <h1 class="text-[30px] leading-[40px] lg:text-[50px] lg:leading-[62px] font-dm capitalize text-primary-200 ">Servicios Incluidos</h1>
      <p class="text-base lg:text-[22px] lg:leading-[33px] tracking-tight font-jost text-text-gray"> <a href="/">Inicio</a> / Servicios </p>
    </div>
  </section>

  	<!-- Services Section -->

	<section class="lg:max-w-[1200px] grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10 lg:gap-y-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] justify-between ">
		{
			services.map((service) => {
				return (
					<div class="w-full col-span-1 max-w-[358px] mx-auto flex rounded-[30px] hover:bg-primary-300 px-5 py-[83px] flex-col justify-center items-center gap-3 md:gap-5">
						<h3 class="text-text-blue font-dm text-[22px] md:text-[25px] leading-loose">{service.title}</h3>
						<p class="text-base md:text-[22px] tracking-tight font-jost text-text-gray leading-[33px] text-center"> {service.text}</p>
						
					</div>
				)
			})
		}
	</section>

  <!-- How We Work Section -->
  <section class="px-12 xl:px-0 w-full mt-[100px] lg:mt-[200px] min-h-screen ">
   <div class="w-full lg:max-w-[1200px] p-12 mx-auto lg:px-[116px] lg:py-[160px] bg-primary-300 rounded-[70px] ">
     <h2 class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full capitalize lg:max-w-[50%] pb-2 mx-auto">Cómo Funciona la Plantilla</h2>
		<p class="text-base md:text-[22px] text-center tracking-tight font-jost text-text-gray leading-[33px] lg:max-w-[60%] mx-auto">Descubre el proceso paso a paso para personalizar y lanzar tu sitio web con esta plantilla profesional de diseño de interiores.</p>

    <div class="pt-[70px] lg:pt-[100px] flex flex-col gap-[70px] ">
      <!-- Inner Sections -->

      {
        howWeWorkDetails.map((detail, index) => {
          const ImageIcon = detail.imgIcon
          const NumberIcon = detail.numIcon
          const className = `flex justify-between flex-col ${index % 2 === 0 ? "lg:flex-row" : "lg:flex-row-reverse"} gap-[50px] items-center max-w-[967px]`

          return(
            <div class={className}>
              <img src={detail.img} alt=""/>
              <div class="flex flex-col gap-12 lg:gap-[58px]">
                <div class="justify-between hidden lg:flex">
                  <ImageIcon />
                  <NumberIcon/>
                </div>
                <div class="flex flex-col gap-3">
                  <h3 class="text-text-blue font-dm text-[22px] md:text-[25px] leading-loose">{detail.title}</h3>
                  <p class="text-base md:text-[22px] tracking-tight font-jost text-text-gray leading-[33px]">{detail.info}</p>
                </div>
              </div>
            </div>
          )
        })
      }

      <!-- Inner Sections End -->
    </div>
   </div>
  </section>

</MainLayout>

<style>

  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
      display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
  }

</style>